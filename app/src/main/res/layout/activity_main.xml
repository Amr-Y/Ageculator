<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.transcendedapps.ageculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RLtop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:id="@+id/LLToday">

            <TextView
                android:text="Today"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:id="@+id/today"
                android:gravity="fill_vertical|start" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvDay"
                android:text="DD"
                android:textSize="24sp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvMonth"
                android:text="MM"
                android:textSize="24sp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvYear"
                android:text="YYYY"
                android:textSize="24sp"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/LLToday"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:id="@+id/LLBirthDate">

            <TextView
                android:text="Birth Date"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:id="@+id/tvPrompt"
                android:gravity="center_vertical|start" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etDay"
                android:hint="DD"
                android:textSize="24sp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center_vertical|center_horizontal" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/etMonth"
                android:hint="MM"
                android:textSize="24sp"
                android:layout_weight="1"
                android:maxLength="2"
                android:gravity="center_vertical|center_horizontal" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etYear"
                android:hint="YYYY"
                android:textSize="24sp"
                android:layout_weight="2"
                android:inputType="number"
                android:maxLength="4"
                android:gravity="center_vertical|center_horizontal" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="datePicker"
                ads:srcCompat="@drawable/cicon"
                android:id="@+id/imageButton"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="6dp" />

        </LinearLayout>
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>


    <TextView
        android:text="Age: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCalculate"
        android:layout_alignParentStart="true"
        android:id="@+id/tvAgeDisplay"
        android:textSize="18sp"
        android:paddingStart="8dp"
        android:paddingTop="36dp"
        android:textColor="@android:color/background_dark"
        android:visibility="invisible" />

    <TextView
        android:text="Enter birth info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvAgeDisplay"
        android:layout_toEndOf="@id/tvAgeDisplay"
        android:id="@+id/tvAge"
        android:textSize="18sp"
        android:paddingStart="4dp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAgeDisplay"
        android:layout_alignParentStart="true"
        android:id="@+id/tvnextBDDisplay"
        android:textSize="18sp"
        android:paddingStart="8dp"
        android:paddingTop="24dp"
        android:textColor="@android:color/background_dark"
        android:text="Next birthday:"
        android:visibility="invisible" />

    <TextView
        android:text="xx Days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvnextBDDisplay"
        android:layout_toEndOf="@id/tvnextBDDisplay"
        android:id="@+id/tvNextBD"
        android:textSize="18sp"
        android:paddingStart="4dp"
        android:textColor="@android:color/background_dark"
        android:visibility="invisible" />

    <TextView
        android:text="Horoscope is: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvnextBDDisplay"
        android:layout_alignParentStart="true"
        android:id="@+id/tvHoroDsplay"
        android:textSize="18sp"
        android:paddingStart="8dp"
        android:paddingTop="24dp"
        android:textColor="@android:color/background_dark"
        android:visibility="invisible" />

    <TextView
        android:text="who cares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvHoroDsplay"
        android:layout_toEndOf="@id/tvHoroDsplay"
        android:id="@+id/tvHoro"
        android:textSize="18sp"
        android:paddingStart="4dp"
        android:textColor="@android:color/background_dark"
        android:visibility="invisible" />

    <Button
        android:text="calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btCalculate"
        android:layout_marginTop="26dp"
        android:padding="8dp"
        android:onClick="btCalculate"
        android:layout_below="@+id/RLtop"
        android:layout_alignParentStart="true"
        android:background="@android:color/black"
        style="@android:style/Widget.Holo.Button"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button"
        android:textStyle="normal|bold" />


</RelativeLayout>
