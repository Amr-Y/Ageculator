<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F1F1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="42dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="28dp"
        android:id="@+id/RLtop"
        android:background="@android:color/background_light"
        android:elevation="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/todayHeader">

            <Space
                android:layout_height="wrap_content"
                android:layout_width="90dp" />

            <TextView
                android:text="Day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewD"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>

            <TextView
                android:text="Month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewM"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>

            <TextView
                android:text="Year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewY"
                android:layout_weight="2"
                android:gravity="center_horizontal" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LLToday">

            <TextView
                android:text="Today"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:id="@+id/today"
                android:gravity="fill_vertical|start" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvDay"
                android:text="DD"
                android:textSize="24sp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvMonth"
                android:text="MM"
                android:textSize="24sp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvYear"
                android:text="YYYY"
                android:textSize="24sp"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LLBirthDate">

            <TextView
                android:text="Birth Date"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:id="@+id/tvPrompt"
                android:gravity="center_vertical|start" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etDay"
                android:hint="DD"
                android:textSize="24sp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="2"
                android:gravity="center_vertical|center_horizontal"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/etMonth"
                android:hint="MM"
                android:textSize="24sp"
                android:layout_weight="1"
                android:maxLength="2"
                android:gravity="center_vertical|center_horizontal" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etYear"
                android:hint="YYYY"
                android:textSize="24sp"
                android:layout_weight="2"
                android:inputType="number"
                android:maxLength="4"
                android:gravity="center_vertical|center_horizontal" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="datePicker"
                ads:srcCompat="@drawable/calen"
                android:id="@+id/imageButton"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@android:color/transparent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LlButtonCalculate"
        android:orientation="horizontal"
        android:layout_below="@+id/RLtop"
        android:layout_alignParentStart="false"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="-12dp">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:text="calculate"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:onClick="btCalculate"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/buttonCalulate"
            style="@android:style/Widget.Material.Button"
            android:backgroundTint="?android:attr/colorAccent"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LlButtonCalculate"
        android:elevation="3dp"
        android:id="@+id/promptContainer">

        <TextView
            android:text="1. Enter birth details,\nor choose date from calender\n\n2. Choose calculate age or anniversary\n\n3. Press calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvErrorMSG"
            android:gravity="center_horizontal"
            android:padding="12dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvErrorMSG"
            android:padding="30dp"
            android:id="@+id/rgCheck">

            <RadioButton
                android:text="Calculate Age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd1"
                android:layout_weight="1"
                android:checked="true" />

            <RadioButton
                android:text="Calculate Anniversary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd2"
                android:layout_weight="1" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="80dp"
        android:layout_below="@+id/RLtop"
        android:background="#eaeaea"
        android:elevation="2dp"
        android:id="@+id/resultContainer">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultHeader">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:text="Years"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="1"
            android:gravity="center_horizontal" />

        <TextView
            android:text="Months"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

        <TextView
            android:text="Days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ageResult"
            android:paddingTop="8dp">

            <TextView
                android:text="Age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAgeDisplay"
                android:textSize="18sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@android:color/background_dark"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAgeYear"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_weight="1"
                android:text="YY"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAgeMonth"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_weight="1"
                android:text="MM"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAgeDay"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_weight="1"
                android:text="DD"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nextResult"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvnextBDDisplay"
                android:textSize="18sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@android:color/background_dark"
                android:text="Next birthday"
                android:layout_weight="2" />

            <TextView
                android:text="MM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvNextMonths"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>

            <TextView
                android:text="DD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:id="@+id/tvNextDays"
                android:layout_weight="1"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horoResult"
        android:foregroundGravity="center_horizontal|fill_horizontal"
        android:elevation="1dp"
        android:background="#d7d7d7"
        android:layout_below="@+id/resultContainer"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp">

        <TextView
            android:text="Horoscope"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tvHoroDsplay"
            android:textSize="18sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:layout_width="0dp"
            ads:srcCompat="@drawable/h1"
            android:id="@+id/horoIcon"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="60dp" />

        <TextView
            android:text="DOG"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tvHoro"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:elevation="5dp">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
